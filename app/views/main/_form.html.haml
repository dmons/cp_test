=form_with model: @ticket, url: main_index_url, class: 'g-5',local: true, data: { turbo: false } do |f|
  .col-md-6.mb-3
    =f.label :name, class: 'col-sm-2 col-form-label'
    =f.text_field :requester_name, class: 'form-control'
  .col-md-6.mb-3
    =f.label :Email, class: 'form-label'
    =f.email_field :requester_email, class: 'form-control'
  .col-md-6.mb-3
    =f.label :subject, class: 'form-label'
    =f.text_field :subject, class: 'form-control'
  .col-md-6.mb-3
    =f.label :content, class: 'form-label'
    =f.text_area :content, size: '60x6', class: 'form-control'
  =f.submit "Submit", class: 'col-1 btn btn-primary'
